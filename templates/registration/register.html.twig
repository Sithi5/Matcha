{% extends 'layout.html.twig' %}

{% block title %}Register{% endblock %}
{% block body %}
	{#navbar #}
	{{ include("navbar/navbar.html.twig") }}
	{#navbar #}
    <div class="container register-form">
        <div class="card">
            <h5 class="card-header info-color white-text text-center py-4">
                <strong> Tell us about you </strong>
            </h5>

            <!-- card content -->
            <div class="card-body px-lg-5 pt-0">
                <form class="text-center" style="color: #757575;" action="#!">
                    {{ form_start(registrationForm) }}
                        <!-- username -->
                        <div class="form-row">
                            <div class="col">
                                <!-- first name -->
                                <div class="form-part">
                                    {{ form_widget(registrationForm.username, {'attr': {'type': 'text', 'class': 'form-control'}}) }}
                                    <label for="registration_form_username" class>First name</label>
                                </div>
                            </div>
                            <div class="col">
                                <!-- Last name -->
                                <div class="form-part">
                                    {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
                                    <label for="registration_form_lastname">Last name</label>
                                </div>
                            </div>
                        </div>

                        <!-- E-mail -->
                        <div class="form-part">
                            {{ form_widget(registrationForm.mail, {'attr': {'class': 'form-control'}}) }}
                            <label for="registration_form_mail">E-mail</label>
                        </div>

                        <!-- Password -->
                        <div class="form-margin">
                            <div class="form-part">
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                <label for="registration_form_plainPassword">Your password</label>
                                <small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted small-password">
                                    At least 8 characters and 1 digit
                                </small>
                            </div>
                        </div>

                            <div class="form-part">
                                {{ form_widget(registrationForm.confirmPlainPassword, {'attr': {'class': 'form-control'}}) }}
                                <label for="registration_form_confirmPlainPassword">Confirm password</label>
                            </div>

                            <!-- Gender -->
                            <div class="form-part form-gender">
                                <label for="registration_form_gender">Your gender</label>
                                {{ form_widget(registrationForm.gender, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-part form-birthdate">
                                {{ form_row(registrationForm.birthdate) }}
                            </div>

                        <div class="form-margin">
                            <button class="btnSubmit">Register</button>
                        </div>

                    {{ form_end(registrationForm) }}
                </form>
            </div
        </div>
    </div>

        {# {{ form_row(registrationForm.agreeTerms) }} #}

    {% block javascripts %}
     {{parent()}}
     <script src="https://unpkg.com/jquery-dropdown-datepicker"></script>
            <script>
            $(document).ready(function() {
                 $('.js-dropdown-datepicker').dropdownDatepicker({
                    submitFormat: 'yyyy-mm-dd',
                    minAge: 18,
                });
            });
        </script>
    {% endblock %}

{% endblock %}

