{% extends 'home/layout.html.twig' %}

{% block body %}

  {{ parent() }}

  <header class="masthead" id="index-masthead">

    <div class="container">

      <div class="intro-text">
        <div class="intro-lead-in">Get True Story{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %} {{name}}{% endif %}
        </div>
        <div class="intro-heading text-uppercase">
          <span class="Text-Pink">Ma</span><span class="Text-White">tcha</span>
        </div>
        {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}

          <!-- button to launch modale register -->
          <button id="button-getstarted" type="button" class="btn btnSubmit btn-getstarted" data-toggle="modal" data-target="#modal-register">
            Register
          </button>

          <!-- modale register struct -->
          <div id="modal-register" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div id="modal-content-register" class="modal-content">
                  {{ render(controller('App\\Controller\\RegistrationController::register', {
                      'fromModal': true,
                    }
                  )) }}
              </div>
            </div>
          </div>

          <!-- modale login struct -->
          <div id="modal-login" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div id="modal-content-login" class="modal-content">
                  {{ render(controller('App\\Controller\\SecurityController::login', {
                      'fromModal': true,
                    }
                  )) }}
              </div>
            </div>
          </div>

        {% endif %}
      </div>

    </div>

  </header>

  {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}

