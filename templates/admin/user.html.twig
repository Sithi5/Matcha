{% block body %}
    {{ encore_entry_script_tags('app') }}
    {{ parent() }}
    {#script for dataTables#}
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

    {% set count = 0 %}

    <table id="table-user" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th class="th-sm" scope="col">#</th>
          <th class="th-sm" scope="col">Name</th>
          <th class="th-sm" scope="col">Email</th>
          <th class="th-sm" scope="col">Confirmed</th>
          <th class="th-sm" scope="col">birthdate</th>
          <th class="th-sm" scope="col">Creation date</th>
          <th class="th-sm" scope="col">Delete</th>
        </tr>
      </thead>
      <tbody id="table-user-body">
        {% for user in users %}
            {% set count = count + 1 %}
            <tr>
                <th scope="row">{{ count }}</th>
                <td>{{ user.name }}</td>
                <td>{{ user.mail }}</td>
                <td>
                    {% if user.Confirmed is same as(true) %}
                        yes
                    {% else %}
                        no
                    {% endif %}
                </td>
                <td>{{ user.birthdate|date("m/d/Y") }}</td>
                <td>{{ user.creationdate|date("m/d/Y") }}</td>
                <td>
                    <form action="{{ path('admin_user', { 'page': page }) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE"/>
                        <input type="hidden" name="id" value="{{user.id}}"/>
                        <button class="btn btn-primary" type="submit">Delete</a>
                    </form>
                </td>
            </tr>
        {% endfor %}
      </tbody>
    </table>

    {% if page > 0 %}
        <a href={{ path('admin_user', {
            'page': page - 1,
            }) }}>
            load previous
        </a>
    {% endif %}
    <a href={{ path('admin_user', {
        'page': page + 1,
        }) }}>
        load next
    </a>
    {#script for datatable#}
    <script>$(document).ready( function () {
        $('#table-user').DataTable();
    } );
    </script>
{% endblock %}

